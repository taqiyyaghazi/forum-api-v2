{
  "name": "forum-api",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/app.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "start": "node dist/app.js",
    "dev": "nodemon --exec tsx src/app.ts",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "migrate:create": "node-pg-migrate create --migration-file-language ts",
    "migrate:up": "NODE_OPTIONS='--import tsx' node-pg-migrate up",
    "migrate:down": "NODE_OPTIONS='--import tsx' node-pg-migrate down",
    "migrate:up:test": "NODE_OPTIONS='--import tsx' node-pg-migrate up --env-path .env.test",
    "migrate:down:test": "NODE_OPTIONS='--import tsx' node-pg-migrate down --env-path .env.test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "auto-bind": "^5.0.1",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "instances-container": "^2.0.6",
    "jsonwebtoken": "^9.0.3",
    "nanoid": "^5.1.6",
    "node-pg-migrate": "^8.0.4",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.2.0",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "4.0.18",
    "eslint": "^9.39.2",
    "nodemon": "^3.1.11",
    "supertest": "^7.2.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac"
}
